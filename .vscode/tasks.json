{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build current C file (no debug)",
      "type": "shell",
      "command": "/bin/zsh",
      "args": [
        "-lc",
        "/bin/zsh \"${workspaceFolder}/.vscode/c_runner.sh\" build \"${fileBasename}\" \"${fileBasenameNoExtension}\""
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run current C file",
      "type": "shell",
      "command": "/bin/zsh",
      "args": [
        "-lc",
        "/bin/zsh \"${workspaceFolder}/.vscode/c_runner.sh\" run \"${fileBasename}\" \"${fileBasenameNoExtension}\""
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "dependsOn": "build current C file (no debug)",
      "problemMatcher": []
    }
  ]
}
