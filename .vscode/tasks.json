{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build current C file (no debug)",
      "type": "shell",
      "command": "/bin/zsh",
      "args": [
        "-lc",
        "mkdir -p build && clang -std=c11 -Wall -Wextra -g main.c intlist_common.c intlist2.c -o build/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run current C file",
      "type": "shell",
      "command": "/bin/zsh",
      "args": [
        "-lc",
        "./build/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "dependsOn": "build current C file (no debug)",
      "problemMatcher": []
    }
  ]
}

